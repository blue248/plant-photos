<div class='form-main'>
  <div class='form-wrapper'>
    <h1>ログイン</h1>
    
    <div class='form-wrapper__inner'>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>
        
        <div class='field'>
          <div class='field_label'>
            <%= f.label :email, 'メールアドレス' %>
          </div>
          <div class='field_input'>
            <%= f.email_field :email, id:'user_email', autofocus: true, autocomplete: 'email' %>
          </div>
        </div>

        <div class='field'>
          <div class='field_label'>
            <%= f.label :password, 'パスワード（6文字以上）' %>
          </div>
          <div class='field_input'>
            <%= f.password_field :password, id:'user_password', autocomplete: 'new-password' %>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit 'ログイン', class: :form__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>