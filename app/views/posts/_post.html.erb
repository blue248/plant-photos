<div class='card'>
  <div class='card__top'>
    <%= link_to image_tag(post.image, class: :card__img ), post_path(post.id), method: :get %>
  </div>

  <div class='card__bottom'>
    <div class='card__bottom__left'>
      <%= post.created_at.strftime('%Y/%m/%d') %>
    </div>
    <div class='card__bottom__right'>
      いいね！
    </div>
  </div>

</div>
