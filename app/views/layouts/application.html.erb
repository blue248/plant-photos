<!DOCTYPE html>
<html>
  <head>
    <title>PlantPhotos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class='header'>
      <div class='inner'>
        <div class='nav'>
          <div class='nav-left'>
            <%= link_to image_tag("logo.png", class: :logo), root_path %>
          </div>

          <div class='nav-right'>

              <div class='nav__right'>
                <%= link_to 'ログイン', '#', class: :nav__btn %>
                <%= link_to '会員登録', '#', class: :nav__btn %>
              </div>

          </div>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
